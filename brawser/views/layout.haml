    %meta{name:"apple-mobile-web-app-capable", content:"yes"}
    %meta{name:"apple-mobile-web-app-status-bar-style", content:"black-translucent"}
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %a{"class" => "btn btn-navbar", "data-toggle" => "collapse", "data-target" => ".nav-collapse"}
            - 3.times do
              %span{class:"icon-bar"}
          %a.brand{href:"/"}= "将棋"
          .nav-collapse
            %ul{class:"nav"}
              %li
                %a{href:"/"}= "COM"
              %li
                %a{href:"/tactics"}= "手筋"
              %li
                %a{href:"/tactics_and_enclosure"}= "囲い戦術"
              %li
                %a{href:"/dsl_form"}= "DSL"
              %li
                %a{href:"/simple_kifu_form"}= "棋譜入力"
              %li
                %a{href:"/standard_kifu_form"}= "KIF入力"
              %li
                %a{href:"/kifu_url_form"}= "KIF URL"
              %li
                %a{href:"/learn_board_points"}= "座標暗記"
              %li
                %a{href:"/swars_skills"}= "将棋ウォーズ"
    .container
      - if @error
        %div= @error.message
        %div= @error.class.name
        %hr
      = yield
      -# %hr
      -# .p
      -#   = RUBY_DESCRIPTION
    %script{src: Sinatra::Base.environment == :production ? "http://code.jquery.com/jquery.js" : "/js/jquery.js"}
    %script{src:"/js/bootstrap.min.js"}
    %script{src:"/js/jquery.tablesorter.min.js"}
    %script{src:"/js/application.js"}
